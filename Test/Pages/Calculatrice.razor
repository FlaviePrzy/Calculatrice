    private void division()
    {
        operateur = 4;
        if (addition == false)
        {
            total = variableglobale;
            variableglobale = 0;
            addition = true;
        }
        else
        {
            total = total / variableglobale;
            variableglobale = 0;
        }
    }

    private void fois()
