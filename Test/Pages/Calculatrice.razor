            variableglobale = 0;
            addition = true;
        }
        else
        {
            total = total - variableglobale;
            variableglobale = 0;
        }
    }

    private void plus()
    {
        operateur = 1;
        if (addition == false)
        {
            total = variableglobale;
            variableglobale = 0;
            addition = true;
        }
        else
