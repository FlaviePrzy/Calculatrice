    Boolean addition = false;


    private void egal()
    {
        switch (operateur)
        {
            case 1:
                total = total + variableglobale;
                break;
            case 2:
                total = total - variableglobale;
                break;
            case 3:
                total = total * variableglobale;
                break;
            case 4:
                total = total / variableglobale;
                break;
            default: break;

        }

        addition = false;

    }

    private void signe()
    {
        variableglobale = -variableglobale;
        total = variableglobale;
